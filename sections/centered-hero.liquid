{% comment %}
  Centered Hero: heading, paragraph, button
{% endcomment %}

<section class="centered-hero" style="text-align:center; padding:4rem 1rem;">
  {% if section.settings.heading != blank %}
    <h2>{{ section.settings.heading }}</h2>
  {% endif %}
  {% if section.settings.text != blank %}
    <p>{{ section.settings.text }}</p>
  {% endif %}
  {% if section.settings.button_text != blank and section.settings.button_url != blank %}
    <a
      href="{{ section.settings.button_url }}"
      class="button"
      style="display:inline-block; margin-top:1rem; padding:.75rem 1.5rem; background:#9f2382; color:#fff; text-decoration:none; border-radius:4px;"
    >
      {{ section.settings.button_text }}
    </a>
  {% endif %}
</section>

{% schema %}
{
  "name": "Centered Hero",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to Our Store"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Subtext",
      "default": "We’re glad you’re here."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL",
      "default": "/collections/all"
    }
  ],
  "presets": [
    {
      "name": "Centered Hero",
      "category": "Hero"
    }
  ]
}
{% endschema %}
